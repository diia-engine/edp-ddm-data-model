<?xml version="1.0" encoding="UTF-8"?>  

<databaseChangeLog  
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"  
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"  
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">  

    <changeSet author="registry owner" id="table ddm_role_permission">
        <comment>CREATE TABLE ddm_role_permission</comment>
        <createTable tableName="ddm_role_permission">
            <column name="permission_id" type="SERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ddm_role_permission"/>
            </column>
            <column name="role_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="object_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="column_name" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="operation" type="typ_operation">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
	
    <changeSet author="registry owner" id="unique constraint iu_ddm_role_permission">
        <comment>ADD CONSTRAINT iu_ddm_role_permission</comment>
        <addUniqueConstraint columnNames="role_name,object_name,operation,column_name" constraintName="iu_ddm_role_permission" tableName="ddm_role_permission"/>
    </changeSet>
	
    <changeSet author="registry owner" id="cluster ddm_role_permission">
        <comment>CLUSTER TABLE ddm_role_permission</comment>
	  <sql dbms="postgresql" endDelimiter=";" splitStatements="true" stripComments="true">
		CLUSTER ddm_role_permission USING iu_ddm_role_permission;
	  </sql>
      <rollback>
      </rollback>
    </changeSet>

</databaseChangeLog>

