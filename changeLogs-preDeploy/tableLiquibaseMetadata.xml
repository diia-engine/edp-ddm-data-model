<?xml version="1.0" encoding="UTF-8"?>  

<databaseChangeLog  
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"  
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"  
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">  


    <changeSet author="registry owner" id="table ddm_liquibase_metadata" objectQuotingStrategy="LEGACY">
        <comment>CREATE TABLE ddm_liquibase_metadata</comment>
        <createTable tableName="ddm_liquibase_metadata">
            <column name="metadata_id" type="SERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ddm_liquibase_metadata"/>
            </column>
            <column name="change_type" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="change_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="attribute_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="attribute_value" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="CURRENT_TIMESTAMP" name="created_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
	
    <changeSet author="registry owner" id="unique constraint iu_ddm_liquibase_metadata" objectQuotingStrategy="LEGACY">
        <comment>ADD CONSTRAINT iu_ddm_liquibase_metadata</comment>
        <addUniqueConstraint columnNames="change_name,change_type,attribute_name,attribute_value" constraintName="iu_ddm_liquibase_metadata" tableName="ddm_liquibase_metadata"/>
    </changeSet>
	
    <changeSet author="registry owner" id="cluster ddm_liquibase_metadata" objectQuotingStrategy="LEGACY">
        <comment>CLUSTER TABLE ddm_liquibase_metadata</comment>
	  <sql dbms="postgresql" endDelimiter=";" splitStatements="true" stripComments="true">
		CLUSTER ddm_liquibase_metadata USING iu_ddm_liquibase_metadata;
	  </sql>
      <rollback>
      </rollback>
    </changeSet>

</databaseChangeLog>

